{
    "version": 2,
    "builds": [
        {
            "src": "server/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "^/invoice(/(.*))?$",
            "dest": "/server/server.js"
        },
        {
            "src": "^/products(/(.*))?$",
            "dest": "/server/server.js"
        },
        {
            "src": "^/api(/(.*))?$",
            "dest": "/server/server.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "^/invoices(.*)$",
            "dest": "/index.html"
        },
        {
            "src": "^/customers(.*)$",
            "dest": "/index.html"
        },
        {
            "src": "^/payment(.*)$",
            "dest": "/index.html"
        },
        {
            "src": "^/summary(.*)$",
            "dest": "/index.html"
        },
        {
            "src": "^/add-product(.*)$",
            "dest": "/index.html"
        },
        {
            "src": "^/low-stock(.*)$",
            "dest": "/index.html"
        },
        {
            "src": "^/customer-summary(.*)$",
            "dest": "/index.html"
        },
        {
            "src": "^/.*$",
            "dest": "/index.html"
        }
    ]
}